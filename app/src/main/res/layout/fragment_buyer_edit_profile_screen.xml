<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.buyer.buyereditprofilescreen.BuyerEditProfileScreen">

    <ProgressBar
        android:id="@+id/buyerEditProfileProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/buyerEditProfileLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/buyerEditProfiletextView3"
                style="@style/TextAppearance.Material3.HeadlineLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="24dp"
                android:text="Edit Profile Pembeli" />

            <ImageView
                android:id="@+id/buyerEditProfileUploadProfilePictureImageView"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/button_border" />

            <Button
                android:id="@+id/buyerEditProfileUploadProfilePictureUploadBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="PILIH GAMBAR" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/buyerEditProfileMyAccountNameTIL"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Nama Pengguna Akun">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/buyerEditProfileMyAccountNameTIET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/buyerEditProfileInfoTitleTv"
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="24dp"
                android:text="Berikut ini data alamat kamu" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/buyerEditProfileInfoNameTIL"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Nama Penerima">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/buyerEditProfileInfoNameTIET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textPersonName" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/buyerEditProfileInfoPhoneNumberTIL"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Nomor Telepon">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/buyerEditProfileInfoPhoneNumberTIET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:maxLength="12" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/buyerEditProfileInfoAddressLabelTIL"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Label Alamat">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/buyerEditProfileInfoAddressLabelTIET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textEmailSubject" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/buyerEditProfileInfoFullAddressTIL"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                android:layout_width="324dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:hint="Alamat Lengkap">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/buyerEditProfileInfoFullAddressTIET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textPostalAddress|textImeMultiLine|textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/buyerEditProfileInfoConfirmEditBtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:text="KONFIRMASI ALAMAT" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>