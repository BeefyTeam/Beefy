<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1877E7"
    tools:context=".ui.buyer.buyercompletepaymentscreen.BuyerCompletePaymentScreen">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/buyerCompletePaymentAnim"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_url="https://assets2.lottiefiles.com/packages/lf20_RTwRX4FwFf.json" />

            <TextView
                android:id="@+id/buyerCompletePaymentThankyouTv"
                style="@style/TextAppearance.Material3.DisplayMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Terima Kasih"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/buyerCompletePaymentAnim"
                app:layout_constraintStart_toStartOf="@+id/buyerCompletePaymentAnim"
                app:layout_constraintTop_toBottomOf="@+id/buyerCompletePaymentAnim" />

            <TextView
                android:id="@+id/buyerCompletePaymentDescTv"
                style="@style/TextAppearance.Material3.TitleLarge"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Pesananmu akan segera diproses! Mohon bersabar ya."
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="@+id/buyerCompletePaymentThankyouTv"
                app:layout_constraintStart_toStartOf="@+id/buyerCompletePaymentThankyouTv"
                app:layout_constraintTop_toBottomOf="@+id/buyerCompletePaymentThankyouTv" />

            <Button
                android:id="@+id/completePaymentOkBtn"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:text="OK"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/buyerCompletePaymentDescTv"
                app:layout_constraintStart_toStartOf="@+id/buyerCompletePaymentDescTv"
                app:layout_constraintTop_toBottomOf="@+id/buyerCompletePaymentDescTv" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</FrameLayout>