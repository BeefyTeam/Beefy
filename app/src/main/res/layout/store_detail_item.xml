<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/storeDetailItemConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/storeDetailItemImageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/storeDetailItemNameTv"
        style="@style/TextAppearance.Material3.TitleLarge"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Anugrah Bersama"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/storeDetailItemImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/storeDetailItemLocationTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bandung"
        app:layout_constraintEnd_toEndOf="@+id/storeDetailItemNameTv"
        app:layout_constraintStart_toStartOf="@+id/storeDetailItemNameTv"
        app:layout_constraintTop_toBottomOf="@+id/storeDetailItemNameTv" />

    <TextView
        android:id="@+id/storeDetailItemOperationalHourTv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Jam operasional toko: 07.00-22.00"
        app:layout_constraintEnd_toEndOf="@+id/storeDetailItemLocationTv"
        app:layout_constraintStart_toStartOf="@+id/storeDetailItemLocationTv"
        app:layout_constraintTop_toBottomOf="@+id/storeDetailItemLocationTv" />

</androidx.constraintlayout.widget.ConstraintLayout>