<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.registersellerscreen.RegisterSellerUploadProfilePictureScreen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView3"
            style="@style/TextAppearance.Material3.HeadlineLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="24dp"
            android:text="Yuk isi poto profile kamu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/registerSellerUploadProfilePictureImageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/button_border"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            android:id="@+id/registerSellerUploadProfilePictureUploadBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="PILIH GAMBAR"
            app:layout_constraintEnd_toEndOf="@+id/registerSellerUploadProfilePictureImageView"
            app:layout_constraintStart_toStartOf="@+id/registerSellerUploadProfilePictureImageView"
            app:layout_constraintTop_toBottomOf="@+id/registerSellerUploadProfilePictureImageView" />

        <Button
            android:id="@+id/registerSellerUploadProfilePictureNextBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="SELANJUTNYA"
            app:layout_constraintEnd_toEndOf="@+id/registerSellerUploadProfilePictureUploadBtn"
            app:layout_constraintStart_toStartOf="@+id/registerSellerUploadProfilePictureUploadBtn"
            app:layout_constraintTop_toBottomOf="@+id/registerSellerUploadProfilePictureUploadBtn" />

        <ProgressBar
            android:id="@+id/registerSellerUploadPPProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>